#include <stdio.h>

// Function to find the number that occurs only once
int singleNumber(int arr[], int n) {
    int result = 0;

    // XOR all elements in the array
    for (int i = 0; i < n; i++) {
        result ^= arr[i];
    }

    return result;
}

int main() {
    int arr[] = {4, 1, 2, 1, 2};
    int n = sizeof(arr) / sizeof(arr[0]);

    int result = singleNumber(arr, n);
    printf("The number that occurs only once: %d\n", result);

    return 0;
}
